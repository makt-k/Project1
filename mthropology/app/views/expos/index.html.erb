<div class="container">
  <h2>Exhibits</h2>
    <div class="form-inline" role="form">
      <div class="form-group">
        <%= form_tag expos_path, :method => 'get' do %>
          <%= text_field_tag(:search, nil, placeholder: "tags") %></div>
        <% end %>
         <div class="btn">
          <%= submit_tag "search" %>
        </div>
      </div>
    </div>
    <br>
  <div id="yield">
    <dl>
      <% @expos.each do |expo| %>
        <dt> Title: <%= link_to expo.title, user_expo_path(expo.user.id, expo.id)%></dt>
          <dd>By: <%=expo.user.email%> </dd>
            <p class="tag"> Tags: <%= expo.tag %></p>
            <p class="time"> Created <%= time_ago_in_words(expo.created_at)%> ago</p>
          <br>
      <% end %>
    </dl>
  </div>
</div>
